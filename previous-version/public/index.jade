include partials/label
include partials/project
include partials/footer
include partials/google_analytics
doctype html

html
    head
        +ga_mixin()
        title Joel Simon
        script(src='/libs/jquery.min.js')
        script(src='/src/main.js')
        link(rel='stylesheet', href='/style/index.css')
        link(rel='stylesheet', href='/style/common.css')
        - var domain = 'http://www.joelsimon.net'
        meta(content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport")
        meta(property="og:title", content="Joel Simon")
        meta(property="og:description", content="Joel Simon Website")
        meta(property="og:image", content=domain+'/imgs/cornered-hands/1.jpg')
        meta(property="og:url", content=domain)
        meta(property="og:type", content='blog')
        //meta(name="viewport", content="width=device-width, initial-scale=1")
        meta(name="Description", content="Joel Simon Website portfolio project")

        script.
            var labels = !{JSON.stringify(public._data['labels'])}

    body
        h1 Joel Simon
        #label_container
            each color, label in public._data['labels']
                +label_mixin(label)

        #project_container
            each project, i in public._data['projects']
                +project_mixin(project)

        +footer_mixin()

